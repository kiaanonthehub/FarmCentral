@model IEnumerable<FarmCentralWebApp.ViewModels.ViewHistory>

@{
    ViewData["Title"] = "FarmerProductHistory";
}

<h1>FarmerProductHistory</h1>

<p>
   Filter by <a asp-action="FilterByDate">Date</a> | <a asp-action="FilterByType">Product Type</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.UsersProductId  }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.UsersProductId  })
            </td>
        </tr>
}
    </tbody>
</table>
