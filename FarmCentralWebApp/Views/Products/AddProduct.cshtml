@model FarmCentralWebApp.ViewModels.StoreProduct

@{
    ViewData["Title"] = "AddProduct";
}

<h1>Add A New Product</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddProduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label"> Name of Product</label>
                <input asp-for="ProductName" class="form-control" type="text" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" type="number"/>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Product Type/Category</label>
                <select asp-for="ProductType" class="form-control" asp-items="@ViewBag.ProductType"></select>
                <span asp-validation-for="ProductType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Track Product's Date</label>
                <input asp-for="ProductDate" class="form-control" type="date" asp-format="dd-mm-yyyy" />
                <span asp-validation-for="ProductDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Capture" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ViewHistory">View History</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
